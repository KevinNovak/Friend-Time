{
    "name": "friend-time",
    "version": "1.0.0",
    "author": "Kevin Novak",
    "description": "Friend Time helps your server coordinate times and events by converting times mentioned in chat between time zones!",
    "license": "Apache 2.0 with Commons Clause",
    "private": true,
    "engines": {
        "node": ">=16.6.0"
    },
    "main": "dist/start.js",
    "scripts": {
        "lint": "tslint --project .",
        "lint:fix": "tslint --fix --project .",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "build": "tsc --project tsconfig.json",
        "register": "npm run build && node --enable-source-maps dist/register.js",
        "start": "npm run build && node --enable-source-maps dist/start.js",
        "start:dev": "ts-node-dev --watch src/**/*.ts,config/**/*.json,lang/**/*.json src/start.ts",
        "start:shard": "npm run build && node --enable-source-maps dist/app.js",
        "start:pm2": "npm run build && npm run pm2:start",
        "pm2:start": "pm2 start process.json",
        "pm2:stop": "pm2 stop process.json",
        "pm2:delete": "pm2 delete process.json"
    },
    "dependencies": {
        "@discordjs/rest": "0.1.0-canary.0",
        "@vvo/tzdb": "6.5.1",
        "chrono-node": "2.2.7",
        "class-transformer": "0.4.0",
        "class-validator": "0.13.1",
        "discord-api-types": "0.24.0",
        "discord.js": "13.2.0",
        "discord.js-collector-utils": "1.2.4",
        "discord.js-rate-limiter": "1.2.3",
        "express": "4.17.1",
        "express-promise-router": "4.1.0",
        "filesize": "8.0.3",
        "linguini": "1.2.9",
        "luxon": "2.0.2",
        "mysql": "2.18.1",
        "node-fetch": "2.6.5",
        "node-schedule": "2.0.0",
        "pino": "7.0.3",
        "pino-pretty": "7.1.0",
        "pm2": "^5.1.2",
        "reflect-metadata": "^0.1.13",
        "remove-markdown": "0.3.0",
        "typeorm": "0.2.38",
        "typeorm-naming-strategies": "2.0.0",
        "url-regex-safe": "2.0.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/luxon": "2.0.5",
        "@types/node": "16.11.1",
        "@types/node-fetch": "2.5.12",
        "@types/node-schedule": "1.3.2",
        "@types/pino": "6.3.12",
        "@types/remove-markdown": "0.3.1",
        "@types/url-regex-safe": "1.0.0",
        "prettier": "^2.4.1",
        "ts-node-dev": "^1.1.8",
        "tslint": "^6.1.3",
        "typescript": "^4.4.4"
    }
}
